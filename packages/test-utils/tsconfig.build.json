{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Cannot be centralised in base.json because TypeScript resolves paths from this file location
    "outDir": "dist",
    "rootDir": "src",
    "tsBuildInfoFile": ".turbo/test-utils.tsbuildinfo"
  },
  "exclude": ["dist", "node_modules", "src/**/*.test.ts", "src/**/__tests__/**"]
} 