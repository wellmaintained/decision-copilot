{
  "name": "@decision-copilot/domain",
  "version": "0.0.0",
  "private": true,
  "description": "Framework-agnostic domain models and business logic",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./*": "./dist/*.js"
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "build:watch": "tsc --project tsconfig.build.json --watch",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:unit": "vitest run --exclude '**/*.integration.test.ts'",
    "test:unit:watch": "vitest --watch --exclude '**/*.integration.test.ts'",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "clean": "rm -rf dist",
    "pre:push": "pnpm run lint && pnpm run test:unit && pnpm run build"
  },
  "dependencies": {
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^17.2.0",
    "dotenv-safe": "^9.1.0",
    "env-var": "^7.5.0",
    "reflect-metadata": "^0.2.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@decision-copilot/config-eslint": "workspace:*",
    "@decision-copilot/config-typescript": "workspace:*",
    "@decision-copilot/config-vitest": "workspace:*",
    "@decision-copilot/test-utils": "workspace:*",
    "@types/uuid": "^10.0.0"
  }
}