{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Cannot be centralised in base.json because TypeScript resolves paths from this file location
    "outDir": "dist",
    "rootDir": "src",
    "tsBuildInfoFile": ".turbo/domain.tsbuildinfo"
  },
  "exclude": [
    "node_modules",
    "lib", 
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/__tests__"
  ]
}