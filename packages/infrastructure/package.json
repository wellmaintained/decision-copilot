{
  "name": "@decision-copilot/infrastructure",
  "version": "0.0.0",
  "private": true,
  "description": "Firebase repository implementations supporting both client and admin SDKs",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./client": "./dist/client/index.js",
    "./admin": "./dist/admin/index.js"
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "build:watch": "tsc --project tsconfig.build.json --watch",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:unit": "vitest run --exclude '**/*.integration.test.ts'",
    "test:unit:watch": "vitest --watch --exclude '**/*.integration.test.ts'",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "clean": "rm -rf dist",
    "pre:push": "pnpm run lint && pnpm run test:unit && pnpm run build"
  },
  "dependencies": {
    "@decision-copilot/domain": "workspace:*",
    "firebase": "^11.10.0",
    "firebase-admin": "^13.4.0",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@decision-copilot/config-eslint": "workspace:*",
    "@decision-copilot/config-typescript": "workspace:*"
  }
}