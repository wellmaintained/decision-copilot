{
  "extends": "./tsconfig.json",
  "exclude": ["dist", "node_modules", "**/*.test.ts", "**/__tests__"],
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    // Cannot be centralised in base.json because TypeScript resolves paths from this file location
    "outDir": "dist",
    "rootDir": "src",
    "tsBuildInfoFile": ".turbo/infrastructure.tsbuildinfo"
  }
}