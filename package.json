{
  "name": "decision-copilot",
  "version": "0.5.0",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "pre:push": "pnpm run lint && pnpm run test:unit && pnpm run build",
    "dev": "concurrently -n \"emulators,next\" \"pnpm run dev:emulators:with-data\" \"wait-on -l tcp:4400 -t 30000 && pnpm run dev:next\"",
    "dev:next": "next dev --turbopack",
    "dev:emulators:with-data": "firebase emulators:start --import=.data/emulators/firebase-data --only auth,firestore",
    "emulators:export": "firebase emulators:export .data/emulators/firebase-data",
    "check:emulators": "wait-on -l tcp:4400 -t 5000 && echo 'Emulator Hub is available!'",
    "build": "next build",
    "build:profile": "next build --profile",
    "start": "next start",
    "lint": "next lint",
    "firebase": "firebase",
    "deploy": "next build && firebase deploy",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "test:unit": "vitest run --exclude '**/*.integration.test.ts'",
    "test:unit:watch": "vitest --watch --exclude '**/*.integration.test.ts'",
    "migrate": "tsx scripts/migrate.ts",
    "firebase:apphosting:deploy:staging": "firebase apphosting:rollouts:create staging --project decision-copilot",
    "firebase:apphosting:deploy:prod": "firebase apphosting:rollouts:create prod --project decision-copilot"
  },
  "dependencies": {
    "@babel/runtime": "^7.26.10",
    "@google-cloud/functions-framework": "^3.4.5",
    "@hookform/resolvers": "^4.1.3",
    "@radix-ui/react-accordion": "^1.2.3",
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-collapsible": "^1.1.3",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-popover": "^1.1.6",
    "@radix-ui/react-radio-group": "^1.2.3",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slider": "^1.2.3",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-toast": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@radix-ui/react-visually-hidden": "^1.1.2",
    "@tiptap/html": "^2.11.5",
    "@tiptap/pm": "^2.11.5",
    "@tiptap/react": "^2.11.5",
    "@tiptap/starter-kit": "^2.11.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.4",
    "cookie": "^1.0.2",
    "date-fns": "^4.1.0",
    "firebase": "^11.3.1",
    "firebase-admin": "^12.7.0",
    "firebase-frameworks": "^0.11.6",
    "firebase-functions": "^6.3.2",
    "framer-motion": "^12.4.7",
    "lucide-react": "^0.473.0",
    "next": "15.2.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "react-markdown": "^10.1.0",
    "recharts": "^2.15.1",
    "reflect-metadata": "^0.2.2",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^11.1.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.0",
    "@types/node": "^22.13.5",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^3.0.9",
    "chalk": "^5.4.1",
    "commander": "^12.1.0",
    "concurrently": "^9.1.2",
    "dotenv": "^16.4.7",
    "esbuild": "^0.25.0",
    "eslint": "^9.21.0",
    "eslint-config-next": "15.1.5",
    "firebase-tools": "^13.31.2",
    "husky": "^9.0.11",
    "postcss": "^8.5.3",
