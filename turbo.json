{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!dist/**/__tests__/**", ".turbo/*.tsbuildinfo", "packages/*/.turbo/*.tsbuildinfo", "apps/*/.turbo/*.tsbuildinfo"],
      "inputs": ["src/**", "*.ts", "*.tsx", "*.js", "*.jsx", "tsconfig.json", "package.json"]
    },
    "@decision-copilot/config-eslint#build": {
      "outputs": []
    },
    "@decision-copilot/config-typescript#build": {
      "outputs": []
    },
    "@decision-copilot/config-vitest#build": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "test:unit": {
      "dependsOn": [],
      "outputs": ["coverage/**"],
      "inputs": ["src/**", "*.test.ts", "*.test.tsx", "vitest.config.ts", "tsconfig.json"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:unit:watch": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": [],
      "outputs": [],
      "inputs": ["src/**", "*.ts", "*.tsx", "*.js", "*.jsx", "eslint.config.js", ".eslintrc.js", "tsconfig.json"]
    },
    "lint:fix": {
      "dependsOn": [],
      "outputs": [],
      "inputs": ["src/**", "*.ts", "*.tsx", "*.js", "*.jsx", "eslint.config.js", ".eslintrc.js", "tsconfig.json"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": ["src/**", "package.json", "tsconfig.json"]
    },
    "clean": {
      "cache": false
    },
    "pre:push": {
      "dependsOn": ["lint", "test:unit", "build"],
      "outputs": []
    }
  },
  "globalDependencies": ["package.json", "pnpm-lock.yaml", "turbo.json", ".npmrc"],
  "globalEnv": ["NODE_ENV"]
}