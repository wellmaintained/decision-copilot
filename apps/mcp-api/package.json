{
  "name": "mcp-api",
  "version": "0.5.0",
  "private": true,
  "type": "module",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf lib",
    "dev": "tsx watch src/index.ts",
    "start": "node lib/index.js",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "test:unit": "vitest run --exclude '**/*.integration.test.ts'",
    "test:unit:watch": "vitest --watch --exclude '**/*.integration.test.ts'",
    "pre:push": "pnpm run lint && pnpm run test:unit && pnpm run build"
  },
  "dependencies": {
    "@decision-copilot/domain": "workspace:*",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@decision-copilot/config-eslint": "workspace:*",
    "@decision-copilot/config-typescript": "workspace:*",
    "tsx": "^4.19.3"
  }
}