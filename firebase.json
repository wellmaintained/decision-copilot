{
  "hosting": {
    "source": ".",
    "site": "decision-copilot", 
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "lib/infrastructure/firebase/functions/**"
    ],
    "frameworksBackend": {
      "region": "europe-west1"
    },
    "cleanUrls": true
  },
  "functions": [
    {
      "source": "lib/infrastructure/firebase/functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "pnpm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "firestore": {
    "rules": "firestore.rules"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8080
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}
